<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal">

    <ImageView
        android:id="@+id/beer_img"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:layout_margin="10dp"
        app:srcCompat="@mipmap/ic_launcher" />
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:padding="5dp">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="3dp"
            >
            <TextView
                android:id="@+id/beer_ko"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="beer_ko"
                android:textSize="20dp"
                />
            <TextView
                android:id="@+id/beer_en"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="beer_en"
                android:textSize="10dp"
                android:layout_marginLeft="10dp"
                />
        </LinearLayout>
        <TextView
            android:id="@+id/beer_alc"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="beer_arc"
            android:layout_margin="3dp"
            />
        <TextView
            android:id="@+id/beer_category"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="beer_category"
            android:layout_margin="3dp"/>
    </LinearLayout>
</LinearLayout>